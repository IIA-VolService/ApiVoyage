<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Reserver un hébergement "
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lieu de réservation"
            android:padding="5dp"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Pays : "
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextPaysHebergement"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Ville : "
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextVilleHebergement"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Type d'hébergement : "
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextTypeHebergement"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de réservation"
            android:padding="5dp"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:text="Début de réservation :"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextDebutHebergement"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:ems="10"
                android:inputType="date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:text="Fin de réservation :"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextFinHebergement"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:ems="10"

                android:inputType="date" />

        </LinearLayout>

        <TextView
            android:layout_width="171dp"
            android:layout_height="28dp"
            android:text=" Personnes "
            android:padding="5dp"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:text="Nombre de personnes :"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextNbPersonnesHebergement"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <TextView
            android:id="@+id/MessageErreur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp" />
        
        <Button
            android:id="@+id/hostel_btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rechercher"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>