<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <LinearLayout
        android:id="@+id/lyt_ic_car"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dip"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:id="@+id/iconCarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="car"
            android:layout_weight="9"
            android:src="@drawable/ic_car_premium" />

        <TextView
            android:id="@+id/descCarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREMIUM"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyt_scd"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/lyt_ic_car"
        android:orientation="horizontal"
        android:singleLine="true"
        android:weightSum="4">

        <TextView
            android:id="@+id/secondLinePlacesCar"
            android:layout_width="0dp"
            android:layout_height="26dip"
            android:layout_weight="2"
            android:text="Citroën"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondLinePrixCar"
            android:layout_width="0dp"
            android:layout_height="26dip"
            android:layout_weight="2"
            android:singleLine="true"
            android:text="254 € / jour"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/firstLineCar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/lyt_scd"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lyt_ic_car"
        android:gravity="center_vertical"
        android:text="C8 Picasso - 5 places"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>

