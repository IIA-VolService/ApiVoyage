<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Acheter un billet "
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:padding="5dp"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="35dp"
                android:text="Départ : "
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextDepart"
                android:layout_width="229dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Ville de départ"
                android:text="Thirsk"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="35dp"
                android:text="Arrivé :"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextArrivee"
                android:layout_width="229dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Ville d'arrivée"
                android:text="Wipim"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:padding="5dp"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:text="Aller :"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextAller"
                android:layout_width="227dp"
                android:layout_height="40dp"
                android:hint="01-01-2000"
                android:text ="06-04-2019"
                android:textSize="15sp"
                android:ems="10"
                android:inputType="date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:text="Retour :"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextRetour"
                android:layout_width="227dp"
                android:layout_height="40dp"
                android:hint="01-01-2000"
                android:text ="16-04-2019"
                android:textSize="15sp"
                android:ems="10"
                android:inputType="date" />

        </LinearLayout>

        <TextView
            android:layout_width="171dp"
            android:layout_height="28dp"
            android:text="Passagers"
            android:padding="5dp"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="171dp"
                android:layout_height="36dp"
                android:text="Nombres de passagers :"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextPassager"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:hint="0"
                android:textSize="15sp"
                android:gravity="center"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classe "
            android:padding="5dp"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/flight_checkbox_Eco"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:text="Economique"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/flight_checkbox_Premium"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:text="Premium"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/flight_checkbox_Business"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:text="Buisness"
                android:gravity="center" />

        </LinearLayout>

        <Button
            android:id="@+id/flight_btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rechercher"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>